<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hischool">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".sharedpreferences.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.QuestionActivity"></activity>
        <activity android:name=".view.activity.SelectSchoolActivity" />
        <activity android:name=".view.activity.CommentActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".view.activity.SignUpActivity" />
        <activity android:name=".view.activity.SignInActivity" />
        <activity android:name=".view.activity.IntroActivity" />
        <activity
            android:name=".view.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>