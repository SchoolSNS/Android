<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.SearchFragment">


    <TextView
        android:id="@+id/search_school_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="대구 소프트웨어 고등학교"
        android:fontFamily="@font/nixgonfontsbold"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:background="@drawable/check_blue"
        app:layout_constraintBottom_toBottomOf="@+id/search_school_name_text"
        app:layout_constraintStart_toEndOf="@+id/search_school_name_text"
        app:layout_constraintTop_toTopOf="@+id/search_school_name_text" />

    <Button
        android:id="@+id/search_setting_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/setting"
        app:layout_constraintBottom_toBottomOf="@+id/search_school_name_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/search_school_name_text" />

    <View
        android:id="@+id/search_bar_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#CFCFCF"
        app:layout_constraintTop_toBottomOf="@+id/search_school_name_text"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/search_search_edit"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#F4F4F4"
        android:drawableLeft="@drawable/search"
        android:gravity="center"
        android:text="대구 소프트웨어 고등학교"
        android:fontFamily="@font/nixgonfontsmedium"
        android:textColor="#000000"
        android:textSize="14sp"
        android:paddingLeft="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_bar_view" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_search_edit">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>