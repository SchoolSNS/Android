<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.QuestionActivity">

    <View
        android:id="@+id/notifications_bar_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#CFCFCF"
        app:layout_constraintTop_toBottomOf="@+id/notifications_school_name_text"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="18"
        android:layout_marginTop="40dp"
        android:hint="제목"
        android:paddingBottom="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notifications_school_name_text"
        tools:ignore="UnknownId" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingEnd="20dp"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageButton
                android:id="@+id/question_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/addphoto"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button2"/>

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/leftback"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/question_image"
                app:layout_constraintEnd_toStartOf="@+id/button3"
                />

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rightback"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button2"
                app:layout_constraintEnd_toStartOf="@+id/question_submit"/>

            <ImageButton
                android:id="@+id/question_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/postbutton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button3"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="683dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/question_contents"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@null"
        android:hint="질문 내용을 입력해주세요"
        android:gravity="top"
        android:ems="18"
        android:paddingTop="20dp"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintEnd_toEndOf="@+id/question_title"
        app:layout_constraintStart_toStartOf="@+id/question_title"
        app:layout_constraintTop_toBottomOf="@+id/question_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/question_image_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/toolbar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/question_contents"
        app:layout_constraintTop_toBottomOf="@+id/question_contents" />

</androidx.constraintlayout.widget.ConstraintLayout>