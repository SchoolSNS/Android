<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/select_school_school_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nixgon_bold"
        android:text="대구소프트웨어고등학교"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorBlack"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/select_school_school_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        android:fontFamily="@font/nixgon_bold"
        android:text="대구광역시 달성군 구지면 창리로 11길 93"
        android:textColor="@color/colorSchoolAddress"
        app:layout_constraintStart_toStartOf="@+id/select_school_school_name"
        app:layout_constraintTop_toBottomOf="@+id/select_school_school_name" />
</androidx.constraintlayout.widget.ConstraintLayout>