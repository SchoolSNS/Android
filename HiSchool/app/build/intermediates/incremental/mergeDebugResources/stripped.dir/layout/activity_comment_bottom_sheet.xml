<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bottomSheet.CommentBottomSheet">

    <TextView
        android:id="@+id/comment_bottom_sheet_textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.5"
        android:gravity="center"
        android:fontFamily="@font/nixgon_bold"
        android:background="@color/colorGrayBackGround"
        android:text="수행할 작업을 선택 해주세요"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrayUnderline"
        app:layout_constraintEnd_toEndOf="@+id/comment_bottom_sheet_textView"
        app:layout_constraintStart_toStartOf="@+id/comment_bottom_sheet_textView"
        app:layout_constraintTop_toBottomOf="@+id/comment_bottom_sheet_textView" />

    <Button
        android:id="@+id/comment_edit_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorGrayBackGround"
        android:text="Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrayUnderline"
        app:layout_constraintEnd_toEndOf="@+id/comment_edit_btn"
        app:layout_constraintStart_toStartOf="@+id/comment_edit_btn"
        app:layout_constraintTop_toBottomOf="@+id/comment_edit_btn" />

    <Button
        android:id="@+id/comment_del_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorGrayBackGround"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/view2"
        app:layout_constraintHeight_percent="0.24"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view2" />
</androidx.constraintlayout.widget.ConstraintLayout>